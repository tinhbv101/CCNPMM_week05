    <h1><li>{{title}}</li></h1>
{{/each}} --}}

<div class="w-100">
    {{#if posts}}
    <div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Content</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            {{#each posts}}
            <tbody>
                <tr>
                    <td><a href="/{{id}}">{{title}}</a></td>
                    <td>{{content}}</td>
                    <td class="text-center"><a href="/{{id}}/edit">Edit</a> | <a href=""
                            onclick="deletePost({{id}})">Delete</a></td>
                </tr>
            </tbody>
            {{/each}}
        </table>
    </div>
    <div class="text-center mt-5">
        <a href="/newPost">
            <button type="button" class="btn btn-primary btn-lg">Add New Blog</button>
        </a>
    </div>
    {{else}}
    <div class="text-center text-danger fw-b h1"> Chưa có blog </div>
    <div class="text-center mt-5">
        <a href="/newPost">
            <button type="button" class="btn btn-primary btn-lg">Add New Blog</button>
        </a>
    </div>
    {{/if}}
</div>